<%- include('partials/header'); -%>
<div class="jumbotron jumbotron-fluid px-5">
    <div class="container">
        <h1 class="pb-3"> <%= title %> </h1>
        <form class="" action="/compose" method="post">
            <div class="form-group  mb-2">
                <label for="title">Title</label>
                <input type="text" class="form-control" name="postTitle" id="title">
            </div>
            <div class="form-group  mb-2">
                <label for="post">Post</label>
                <textarea class="form-control" name="postBody" id="post-text-area" rows="7"></textarea>
            </div>
            <div class="form-group">
                <button class="btn btn-outline-success" type="submit">Publish</button>
            </div>
        </form>
    </div>
</div>
<%- include('partials/footer'); -%>